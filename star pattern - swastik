import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    Scanner s = new Scanner(System.in);
		System.out.print("Enter a number : ");
		int n = s.nextInt();
		int st = n ;
		for(int i=1;i<=n;i++){
		    for(int j=1;j<=st;j++){
		        if(i==(n+1)/2||j==(n+1)/2||(j==1&&i<=(n+1)/2)||(i==1&&j>=(n+1)/2)||(j==st&&i>=(n+1)/2)||(i==n&&j<=(n+1)/2))
		            System.out.print("* ");
		        else 
		            System.out.print("  ");
		    }
		    System.out.println();
		}
	}
}
